@model WebApplication7.ViewModels.PlaceViewModel
<link href="/css/Details.css" rel="stylesheet" />

<div class="ad-container">
    <div class="text-container">
        <h1>@Model.SpecificPlace.Place_Name</h1>
        <h3>@Model.SpecificPlace.Place_City</h3>
        <p>@Model.SpecificPlace.Description</p>
        <p>Rating: @Model.SpecificPlace.Place_Rating</p>
        <p>Price: @Model.SpecificPlace.Place_Price EGP</p>
        <div class="card-body">
            <a asp-action="Edit" asp-route-id="@Model.SpecificPlace.Place_Id" class="cta-button">Edit</a>
            <a asp-action="Delete" asp-route-id="@Model.SpecificPlace.Place_Id" class="cta-button" onclick="return confirmDelete()">Delete</a>
        </div>
    </div>

    <div class="image-container">
        @if (Model.SpecificPlace.imageSrc == null || !Model.SpecificPlace.imageSrc.Any())
        {
            <img src="/Images/no-image-found.jpg" alt="No Image Available" class="default-image" />
        }
        else
        {
            foreach (var image in Model.SpecificPlace.imageSrc)
            {
                <img src="@image" alt="Place Image" class="place-image" />
            }
        }
    </div>
</div>

<script>
    function confirmDelete() {
        return confirm("Are you sure you want to delete this place?");
    }
</script>
